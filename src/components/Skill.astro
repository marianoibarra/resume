---
import { type CollectionEntry, render } from "astro:content";

interface Props {
  item: CollectionEntry<"skills">;
}

const { item } = Astro.props;
const { Content } = await render(item);
const lang = (Astro.currentLocale || "es") as "es" | "en";
const title = item.data.title[lang];
---

<article>
  <h4 class="article-heading">{title}</h4>
  <div class="[&>*>li]:inline [&>*>li]:not-last:after:content-[','] text-neutral-600 text-pretty text-sm leading-snug mt-0.5">
    <Content />
  </div>
</article>
